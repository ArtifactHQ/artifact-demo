<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><%= link_to "Projects", projects_path %></li>
    <li class="breadcrumb-item active">New Project</li>
  </ol>
</nav>

<div class="row">
  <div class="col-lg-8 mx-auto">
    <div class="card shadow">
      <div class="card-body p-4">
        <h2 class="card-title mb-4">Create New Project</h2>
        
        <%= form_with model: @project, local: true do |f| %>
          <% if @project.errors.any? %>
            <div class="alert alert-danger">
              <h5><%= pluralize(@project.errors.count, "error") %> prohibited this project from being saved:</h5>
              <ul class="mb-0">
                <% @project.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <div class="mb-3">
            <%= f.label :name, class: "form-label" %>
            <%= f.text_field :name, class: "form-control form-control-lg", placeholder: "e.g., E-commerce Platform", autofocus: true %>
          </div>

          <div class="mb-3">
            <%= f.label :description, class: "form-label" %>
            <%= f.text_area :description, class: "form-control", rows: 4, placeholder: "Describe what you want to build..." %>
          </div>

          <div class="mb-4">
            <%= f.label :status, class: "form-label" %>
            <%= f.select :status, [['Draft', 'draft'], ['Active', 'active'], ['Archived', 'archived']], {}, class: "form-select" %>
          </div>

          <div class="d-flex gap-2">
            <%= f.submit "Create Project", class: "btn btn-primary btn-lg" %>
            <%= link_to "Cancel", projects_path, class: "btn btn-outline-secondary btn-lg" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
