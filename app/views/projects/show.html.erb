<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><%= link_to "Projects", projects_path %></li>
    <li class="breadcrumb-item active"><%= @project.name %></li>
  </ol>
</nav>

<div class="row mb-4">
  <div class="col">
    <div class="d-flex align-items-center gap-3">
      <h1 class="display-5 mb-0"><%= @project.name %></h1>
      <span class="badge bg-<%= @project.status == 'active' ? 'success' : @project.status == 'draft' ? 'secondary' : 'warning' %>">
        <%= @project.status.capitalize %>
      </span>
    </div>
    <% if @project.description.present? %>
      <p class="text-muted mt-2"><%= @project.description %></p>
    <% end %>
  </div>
  <div class="col-auto">
    <%= link_to edit_project_path(@project), class: "btn btn-outline-secondary" do %>
      <i class="fas fa-edit me-2"></i>Edit Project
    <% end %>
  </div>
</div>

<div class="row mb-3">
  <div class="col">
    <h3>Documents</h3>
  </div>
  <div class="col-auto">
    <%= link_to new_project_document_path(@project), class: "btn btn-primary" do %>
      <i class="fas fa-plus me-2"></i>New Document
    <% end %>
  </div>
</div>

<% if @documents.any? %>
  <div class="row g-3">
    <% @documents.each do |document| %>
      <div class="col-12">
        <div class="card shadow-sm">
          <div class="card-body">
            <div class="row align-items-center">
              <div class="col">
                <div class="d-flex align-items-center gap-3">
                  <i class="fas fa-<%= case document.document_type
                    when 'feature' then 'puzzle-piece'
                    when 'page' then 'file'
                    when 'component' then 'cube'
                    when 'database' then 'database'
                    when 'api' then 'code'
                    else 'file-alt'
                  end %> fa-2x text-primary"></i>
                  <div>
                    <h5 class="mb-1">
                      <%= link_to document.title, project_document_path(@project, document), class: "text-decoration-none" %>
                    </h5>
                    <small class="text-muted">
                      <span class="badge bg-light text-dark me-2"><%= document.document_type.capitalize %></span>
                      <%= document.version_count %> versions Â· Updated <%= time_ago_in_words(document.updated_at) %> ago
                    </small>
                  </div>
                </div>
              </div>
              <div class="col-auto">
                <div class="btn-group">
                  <%= link_to project_document_path(@project, document), class: "btn btn-sm btn-outline-primary" do %>
                    <i class="fas fa-eye me-1"></i>View
                  <% end %>
                  <%= link_to edit_project_document_path(@project, document), class: "btn btn-sm btn-outline-secondary" do %>
                    <i class="fas fa-edit me-1"></i>Edit
                  <% end %>
                  <%= link_to preview_project_document_path(@project, document), class: "btn btn-sm btn-outline-success" do %>
                    <i class="fas fa-play me-1"></i>Preview
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <div class="alert alert-info">
    <i class="fas fa-info-circle me-2"></i>
    No documents yet. Create your first document to start building your application.
  </div>
<% end %>
