<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><%= link_to "Projects", projects_path %></li>
    <li class="breadcrumb-item"><%= link_to @project.name, @project %></li>
    <li class="breadcrumb-item active"><%= @document.title %></li>
  </ol>
</nav>

<div class="row">
  <div class="col-lg-8">
    <div class="card shadow-sm mb-4">
      <div class="card-body p-4">
        <div class="d-flex justify-content-between align-items-start mb-3">
          <div>
            <h1 class="display-6 mb-2"><%= @document.title %></h1>
            <div class="d-flex gap-2 align-items-center">
              <span class="badge bg-light text-dark"><%= @document.document_type.capitalize %></span>
              <small class="text-muted">Last updated <%= time_ago_in_words(@document.updated_at) %> ago</small>
            </div>
          </div>
          <div class="btn-group">
            <%= link_to edit_project_document_path(@project, @document), class: "btn btn-outline-secondary" do %>
              <i class="fas fa-edit me-1"></i>Edit
            <% end %>
            <%= link_to preview_project_document_path(@project, @document), class: "btn btn-outline-success" do %>
              <i class="fas fa-play me-1"></i>Preview
            <% end %>
          </div>
        </div>

        <hr>

        <div class="document-content prose">
          <%= simple_format(@document.content) %>
        </div>
      </div>
    </div>

    <!-- Version Control Section -->
    <div class="card shadow-sm">
      <div class="card-header bg-white">
        <h5 class="mb-0">
          <i class="fas fa-code-branch me-2"></i>Commit New Version
        </h5>
      </div>
      <div class="card-body">
        <%= form_with url: commit_version_project_document_path(@project, @document), method: :post, class: "d-flex gap-2" do |f| %>
          <%= f.text_field :commit_message, class: "form-control", placeholder: "Describe your changes...", required: true %>
          <%= f.submit "Commit Version", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>

  <div class="col-lg-4">
    <div class="card shadow-sm sticky-top" style="top: 20px;">
      <div class="card-header bg-white">
        <h5 class="mb-0">
          <i class="fas fa-history me-2"></i>Version History
        </h5>
      </div>
      <div class="card-body p-0">
        <div class="list-group list-group-flush">
          <% if @versions.any? %>
            <% @versions.each do |version| %>
              <div class="list-group-item">
                <div class="d-flex justify-content-between align-items-start">
                  <div class="flex-grow-1">
                    <div class="d-flex align-items-center gap-2 mb-1">
                      <span class="badge bg-primary">v<%= version.version_number %></span>
                      <span class="badge bg-<%= version.status == 'deployed' ? 'success' : version.status == 'committed' ? 'info' : 'secondary' %>">
                        <%= version.status %>
                      </span>
                    </div>
                    <small class="text-muted d-block">
                      <%= version.commit_message || 'No message' %>
                    </small>
                    <% if version.committed_at %>
                      <small class="text-muted">
                        <%= time_ago_in_words(version.committed_at) %> ago
                      </small>
                    <% end %>
                  </div>
                  <div class="btn-group-vertical btn-group-sm">
                    <%= link_to project_document_version_path(@project, @document, version), class: "btn btn-sm btn-outline-secondary" do %>
                      <i class="fas fa-eye"></i>
                    <% end %>
                    <% if version.status == 'committed' %>
                      <%= button_to deploy_project_document_version_path(@project, @document, version), method: :post, class: "btn btn-sm btn-outline-success" do %>
                        <i class="fas fa-rocket"></i>
                      <% end %>
                    <% end %>
                  </div>
                </div>
              </div>
            <% end %>
          <% else %>
            <div class="list-group-item text-muted text-center">
              No versions yet
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
